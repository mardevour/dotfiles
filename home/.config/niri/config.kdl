// Input device configuration.
// https://github.com/YaLTeR/niri/wiki/Configuration:-Input
input {
    keyboard {
        xkb {
            layout "es"
        }
        numlock
    }
    touchpad {
        // off
        tap
        natural-scroll
    }

    mouse {
        accel-speed 0.5
        accel-profile "flat"
    }
    //warp-mouse-to-focus
    focus-follows-mouse max-scroll-amount="25%"
}

output "VGA-1" {
    position x=0 y=0
}
output "DVI-D-1" {
    position x=1024 y=0
}

// workspaces
workspace "1"
workspace "2"
workspace "3"
workspace "4"

layout {
    gaps 5

    center-focused-column "on-overflow"
    always-center-single-column

    preset-column-widths {
        proportion 0.33377
        proportion 0.5
        proportion 0.66633
    }

    preset-window-heights { 
        proportion 0.5
        proportion 1.0
    }

    default-column-width { proportion 0.7; }

    focus-ring {
        off
    }

    border {
        width 1
        active-color "#7aa2f7"
        inactive-color "#3F3B42"

        urgent-color "#ed8796"
    }

    shadow {
        on
        softness 30
        spread 5
        offset x=0 y=5
        color "#00000077"
    }

    insert-hint {
        color "#67CC82"
    }
}

// hotkey-overlay
hotkey-overlay {
    skip-at-startup
}

prefer-no-csd

screenshot-path "/home/mar/.tmp/last-niri-screenshot.png"

// CUSTOM WINDOW RULES
// helium
window-rule {
    match app-id="helium"
    open-maximized true
    // open-on-output "Ancor Communications Inc ASUS VS197 D9LMTF096511"
    open-on-workspace "1"
}
// helium
window-rule {
    match app-id="revive (DEBUG)"
    open-floating false
    open-maximized true
    // open-on-output "Ancor Communications Inc ASUS VS197 D9LMTF096511"
