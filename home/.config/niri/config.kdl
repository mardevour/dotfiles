environment {
    QT_STYLE_OVERRIDE null
    QT_QPA_PLATFORMTHEME "qt6ct"
    XDG_CURRENT_DESKTOP "KDE"
    //QT_QPA_PLATFORM "wayland"
    DISPLAY ":0"
}

// autolaunch - inicio automático

spawn-at-startup "quickshell"

// swaybg background wallpaper
//spawn-at-startup "swaybg" "-i" "/home/mar/.cache/wal/wal-blur.png"
//spawn-at-startup "swww-daemon"
//spawn-at-startup "swww" "img" "$(cat" "/home/mar/.cache/wal/wal)"

// walker
spawn-at-startup "elephant"
spawn-at-startup "walker" "--gapplication-service"

